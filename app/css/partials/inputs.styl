
input[type=text] {
  transition: box-shadow .2s ease-in-out,
              padding-top .2s ease-in-out;
  font-family: body-font;
  background: white;
  border: none;
  box-shadow: inset 0 0 0 light-grey,
              inset 0 0 0 coralred;
  outline: none;

  &:hover {
    outline: none;
    box-shadow: inset 0 6px 0 light-grey,
                inset 0 0 0 transparent;
  }

  &:focus {
    box-shadow: inset 0 6px 0 transparent,
                inset 0 6px 0 coralred;
  }

}


#chat-input-wrapper {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  &:before {
    transition: top .2s ease-in-out,
                color .2s ease-out .1s;
    icon("pen");
    color: rgba(light-grey, .4);
    font-size: 16px;
    position: absolute;
    left: 30px;
    top: 20px;
    z-index: 101;
  }

  &.focus:before {
    color: rgba(coralred, .8);
    top: 23px;
  }
}

#chat-input {
  background: #fff;
  position: relative;
  display: block;
  padding: 20px 30px 20px 60px;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  z-index: 100;

  &:focus { padding-top: 26px; }

}

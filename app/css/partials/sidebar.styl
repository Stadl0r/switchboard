sidebar-width = 240px;

#sidebar-members {
  transition: right .3s ease-in-out .2s;
  background-color: darken(purple, 4);
  padding: 0;
  position: fixed;
  width:  sidebar-width;
  top: 60px;
  right: sidebar-width * -1;
  bottom: 60px;
  z-index: 9;
  overflow-y: scroll;

  &.open {
    transition: right .4s ease-in-out;
    right: 0;
  }

  > ul {
    list-style-type: none;
    margin-top: 0;
    padding-top: 30px;
    padding-left: 45px;

    li { }
  }
}

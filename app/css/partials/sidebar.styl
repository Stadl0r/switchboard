sidebar-width = 240px;


#sidebar-members-button {
  transition: color .3s ease-in-out .2s,
              background .3s ease-in-out .2s,
              padding-left .3s ease-out .3s,
              box-shadow .2s ease-in-out .3s;
  background: transparent;
  box-shadow: 0 0 0 rgba(indigo, 0);
  color: white;
  font-weight 700
  text-transform: uppercase;
  position: absolute;
  padding: 20px;
  top: 60px;
  right: 0;

  z-index: 11;
  cursor: default;

  &.open,
  &:hover {
    box-shadow: 0 6px 0 rgba(indigo, .2);
    padding-left: 45px;
    text-align: left;
    transition: color .4s ease-in-out,
                background .4s ease-in-out,
                padding-left .3s ease-in-out,
                box-shadow .2s ease-in-out .4s;
    background: purple;
    color: white;
  }
}

#sidebar-members {
  transition: right .3s ease-in-out .2s;
  background-color: darken(purple, 4);
  padding: 0;
  position: fixed;
  width:  sidebar-width;
  top: 60px;
  right: sidebar-width * -1;
  bottom: 60px;
  z-index: 9;
  overflow-y: scroll;

  &.open {
    transition: right .4s ease-in-out;
    right: 0;
  }

  > ul {
    list-style-type: none;
    margin-top: 0;
    padding-top: 30px;
    padding-left: 45px;

    li { }
  }
}

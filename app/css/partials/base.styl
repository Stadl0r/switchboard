
* { box-sizing: border-box; }

::selection {
  color: white;
  background: rust;
}

::-moz-selection {
  color: white;
  background: rust;
}

body {
  color: grey;
  background: black;
  font-family: body-font;
}

#chat {
  position: fixed;
  overflow-y: auto;
  top: 0;
  right: 0;
  left: 0;
  bottom: 60px;
  padding: 40px;

  .time { color: white; }
  .nickname { color: orange; }
}

#input {
  font-family: body-font;
  position: fixed;
  background: white;
  display: block;
  border: none;
  border-top: 0px solid orange;
  padding: 0 30px;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  transition: border .1s ease-in-out;
  -webkit-transition: border .1s ease-in-out;
}

#input:focus {
  border-top: 6px solid orange;
  outline: none;
}

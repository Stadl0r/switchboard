
* { box-sizing: border-box; }

::selection {
  color: white;
  background: rust;
}

::-moz-selection {
  color: white;
  background: rust;
}

body {
  color: grey;
  background: black;
  font-family: body-font;
}

#chat {
  position: fixed;
  overflow-y: auto;
  top: 0;
  right: 0;
  left: 0;
  bottom: 60px;
  padding: 30px;

  .wrapper {
    list-style-type: none;
    padding-left: 0;
  }

  .time { color: white; }
  .nickname { color: orange; }
  .message { word-wrap: break-word; }
}

#input {
  font-family: body-font;
  position: fixed;
  background: white;
  display: block;
  border: none;
  border-top: 0px solid orange;
  padding: 0 30px;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  transition: border .1s ease-in-out;
  -webkit-transition: border .1s ease-in-out;
}

#input:focus {
  border-top: 6px solid orange;
  outline: none;
}

#window {
  position: relative;
  background: purple;
  width: 300px;
  height: 150px;
  margin: auto;
}

#nick {
  position: absolute;
  font-family: body-font;
  background: white;
  height:40px;
  top: 37%;
  left: 10%;
  padding: 0 15px;
  width:80%;
   transition: border .1s ease-in-out;
  -webkit-transition: border .1s ease-in-out;
}

#nick:focus {
  border-top: 6px solid orange;
  outline:none;

}

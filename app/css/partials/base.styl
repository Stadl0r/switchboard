
* { box-sizing: border-box; }

::selection {
  color: white;
  background: coralred;
}

body {
  color: grey;
  background: black;
  font-family: body-font;
}

#topbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  color: greyindigo;
  background-color: indigo;
  z-index: 10;

  .account {
    display: inline-block;
    background-color: coralred;
    color: white;
    height: 60px;
    padding: 18px 45px 0;
    vertical-align: top;
  }

  > div {
    display: inline-block;
    button {
      height: 60px;
      margin-bottom: 0;
    }
  }
}


#chat {
  position: fixed;
  overflow-y: auto;
  top: 60px;
  right: 0;
  left: 0;
  bottom: 60px;
  padding: 0 30px 30px 30px;

  #chat-messages {
    list-style-type: none;
    padding-left: 0;
    // width: 80%;
  }

  .time {
    color: rgba(white, .3);
    margin-right: 10px;
  }
  .nickname { color: coralred; }
  .message { word-wrap: break-word; }
}



#modal {
  transition: bottom 0s ease-in-out .4s;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 100%;
  left: 0;
  z-index: 1000;

  .overlay {
    transition: background .4s ease-in-out;
    pointer-events: none;
    position: absolute;
    background: rgba(coralred, 0);
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .panel {
    transition: top .4s ease-in-out;
    position: absolute;
    width: 300px;
    left: 50%;
    margin-top: -75px;
    margin-left: -150px;
    top: -300px;
  }

  &.open {
    bottom: 0;
    .overlay {
      background: rgba(purple, .9);
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }
    .panel {
      display: block;
      top: 50%;
    }
  }

  input[type=text] {
    text-align: center;
    width: 100%;
    height: 60px;
    margin-bottom: 4px;
    padding: 0 15px;
  }

  button {
    text-align: center;
    width: 100%;
    margin-bottom: 0;
  }

}

#menu {
  top: 0;
  bottom: 0;
  font-size: 20px;
  right: 240px;
  background: indigo;
  color: white;
  position: absolute;
}

#menu ul {
  list-style-type:none;
  padding: 0;
  margin: 0;
}

#menu li {
  height: 60px;
  padding: 18px;
  border-bottom: 4px solid coralred; 
}

#menu li:active {
  border-bottom: 4px solid coralred;
}

#menu li:hover {
  background: coralred;
  border-bottom: 4px solid white;
  transition: background .2s ease-out,
              color .2s ease-out,
              border .2s ease-out;
}

#topbar {
  position: fixed;
  font-size: 0;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  color: greyindigo;
  background-color: indigo;
  z-index: 10;


  .chat-tabs-wrapper > div,
  input {
    display: inline-block;
    vertical-align: top;
  }

  .left {
    display: inline-block;
    color: white;
    font-size: 32px;
    margin-top: 7px;
    margin-left: 10px;
    vertical-align: top;
  }

  .right {
    position: absolute;
    font-size: 0;
    right: 0;
    top: 0;
  }

  .account {
    display: inline-block;
    position: relative;
    right: 15px;
    top: 0;
    color: white;
    font-size: 16px;
    height: 60px;
    padding: 13px 0 0 16px;
    vertical-align: top;


    .avatar {
      box-shadow: 0 0 0 2px black,
                  0 0 0 4px green;
      width: 26px;
      height: 26px;
      text-align: center;
      margin-top: -2px;
      margin-left: 10px;
      margin-right: 0;
      float: right;
      img { width: 100%; }
    }
  }

  > div {
    display: inline-block;
    button {
      height: 60px;
      margin-bottom: 0;
    }
  }
}

.indicator {
  border-radius: 1000px;
  display: block;
  position: absolute;
  height: 10px;
  width: 10px;
  top: 16px;
  left: 0px;
  background: green;
}


#sidebar-members-button {
  transition: color .3s ease-in-out .2s,
              background .3s ease-in-out .2s,
              padding-left .3s ease-out .3s,
              box-shadow .2s ease-in-out .3s;
  background: transparent;
  box-shadow: 0 0 0 rgba(indigo, 0);
  color: white;
  display: inline-block;
  font-size: 16px;
  font-weight 700
  text-transform: uppercase;
  padding: 20px;

  z-index: 11;
  cursor: default;

  &.open,
  &:hover {
    box-shadow: 0 6px 0 rgba(indigo, .2);
    padding-left: 20px;
    text-align: left;
    transition: color .4s ease-in-out,
                background .4s ease-in-out,
                padding-left .3s ease-in-out,
                box-shadow .2s ease-in-out .4s;
    background: purple;
    color: white;
  }
}

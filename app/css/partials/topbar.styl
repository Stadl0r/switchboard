#topbar {
  position: fixed;
  font-size: 0;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  color: greyindigo;
  background-color: indigo;
  z-index: 10;

  .server {
    display: inline-block;
    background-color: coralred;
    color: white;
    font-size: 16px;
    height: 60px;
    padding: 18px 45px 0;
    vertical-align: top;
  }

  .right {
    position: absolute;
    font-size: 0;
    right: 0;
    top: 0;
  }

  .account {
    display: inline-block;
    position: relative;
    right: 0;
    top: 0;
    color: white;
    font-size: 16px;
    height: 60px;
    padding: 18px 16px 0 16px;
    vertical-align: top;
  }

  > div {
    display: inline-block;
    button {
      height: 60px;
      margin-bottom: 0;
    }
  }
}

.indicator {
  border-radius: 1000px;
  display: block;
  position: absolute;
  height: 10px;
  width: 10px;
  top: 24px;
  left: 0;
  background: green;
}


#sidebar-members-button {
  transition: color .3s ease-in-out .2s,
              background .3s ease-in-out .2s,
              padding-left .3s ease-out .3s,
              box-shadow .2s ease-in-out .3s;
  background: transparent;
  box-shadow: 0 0 0 rgba(indigo, 0);
  color: white;
  display: inline-block;
  font-size: 16px;
  font-weight 700
  text-transform: uppercase;
  padding: 20px;

  z-index: 11;
  cursor: default;

  &.open,
  &:hover {
    box-shadow: 0 6px 0 rgba(indigo, .2);
    padding-left: 20px;
    text-align: left;
    transition: color .4s ease-in-out,
                background .4s ease-in-out,
                padding-left .3s ease-in-out,
                box-shadow .2s ease-in-out .4s;
    background: purple;
    color: white;
  }
}

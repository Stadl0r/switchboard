.chat-tabs-wrapper {
  font-size: 0;
  padding: 0;
  left: 0;
  > .tab {
    display: inline-block;
    font-size: 16px;
    vertical-align: top;
    height: 60px;
    white-space: nowrap;
    a {
      display: block;
      color: greyindigo;
      font-weight: bold;
      text-decoration: none;
      margin: 0;
      height: 60px;
      padding: 18px 20px;

      &.active {
        background: black;
        color: white;
      }

      &:hover { background: rgba(greyindigo, .2); }
    }
  }
}

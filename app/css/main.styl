* { box-sizing: border-box; }

body {
  color: #a8a8a8;
  background: #303038;
  font-family:"Source Code Pro",sans-serif;
}

#chat {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 60px;
  padding:40px;
}

#input {
  font-family:"Source Code Pro",sans-serif;
  position: absolute;
  background:#fff;
  display: block;
  border: none;
  padding: 0 30px;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60px;
  transition: border .1s ease-in-out;
  -webkit-transition: border .1s ease-in-out;
}

#input:focus {
    border-top:6px solid #ffa27e;
    outline: none;

}